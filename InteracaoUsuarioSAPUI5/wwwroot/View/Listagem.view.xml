<mvc:View
    controllerName="reservas.hoteis.controller.Listagem"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel accessibleRole="Region">
        <Table
            id="TabelaReservas"
            class="sapUiResponsiveMargin"
            width="auto"
            items="{TabelaReservas>/}">
            <columns>
                <Column>
                    <ObjectIdentifier title="{i18n>tituloColunaId}" />
                </Column>
                <Column>
                    <ObjectIdentifier title="{i18n>tituloColunaNome}" />
                </Column>
                <Column>
                    <ObjectIdentifier title="{i18n>tituloColunaCpf}" />
                </Column>
                <Column>
                    <ObjectIdentifier title="{i18n>tituloColunaTelefone}" />
                </Column>
                <Column>
                    <ObjectIdentifier title="{i18n>tituloColunaIdade}" />
                </Column>
                <Column>
                    <ObjectIdentifier title="{i18n>tituloColunaSexo}" />
                </Column>
                <Column>
                    <ObjectIdentifier title="{i18n>tituloColunaCheckIn}" />
                </Column>
                <Column>
                    <ObjectIdentifier title="{i18n>tituloColunaCheckOut}" />
                </Column>
                <Column>
                    <ObjectIdentifier title="{i18n>tituloColunaPrecoEstadia}" />
                </Column>
                <Column>
                    <ObjectIdentifier title="{i18n>tituloColunaPagamentoEfetuado}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{TabelaReservas>id}" />
                        <Text text="{TabelaReservas>nome}" />
                        <Text text="{TabelaReservas>cpf}" />
                        <Text text="{TabelaReservas>telefone}" />
                        <Text text="{TabelaReservas>idade}" />
                        <Text
                            text="{
                            parts: [
                                'TabelaReservas>sexo',
                                'i18n>sexo0',
                                'i18n>sexo1'
                            ],
                            formatter: '.formatter.formataSexo'
                        }" />
                        <Text
                            text="{
                                path: 'TabelaReservas>checkIn',
                                type: 'sap.ui.model.type.Date',
                            formatOptions: {
                                style: 'short',
                            source: {
                                pattern: 'yyyy-MM-ddTHH:mm:ss'
                                }
                            }
                        }" />
                        <Text
                            text="{
                                path: 'TabelaReservas>checkOut',
                                type: 'sap.ui.model.type.Date',
                            formatOptions: {
                                style: 'short',
                            source: {
                                pattern: 'yyyy-MM-ddTHH:mm:ss'
                                }
                            }
                        }" />
                        <ObjectNumber
                            number="{
                            parts: [
                                'TabelaReservas>precoEstadia',
                                'view>/currency'
                            ],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {
                                showMeasure: false
                            }
                        }"
                            unit="{view>/currency}" />
                        <Text
                            text="{
                            parts: [
                                'TabelaReservas>pagamentoEfetuado',
                                'i18n>pagamentoEfetuadoTrue',
                                'i18n>pagamentoEfetuadoFalse'
                            ],
                            formatter: '.formatter.formataPagamentoEfetuado'
                        }" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</mvc:View>