<mvc:View
    controllerName="reservas.hoteis.controller.Listagem"
    xmlns="sap.ui.webc.main"
    xmlns:mvc="sap.ui.core.mvc">
    <Table
        id="TabelaReservas"
        stickyColumnHeader="true"
        rowClick="handleRowClick"
        mode="SingleSelect"
        selectionChange="handleSelectionChange"
        rows="{
					path: '',
					sorter: {
						path: 'id'
					}
				}">
        <columns>
            <TableColumn>
                <Label text="{i18n>tituloColunaId}" />
            </TableColumn>
            <TableColumn>
                <Label text="{i18n>tituloColunaNome}" />
            </TableColumn>
            <TableColumn>
                <Label text="{i18n>tituloColunaCpf}" />
            </TableColumn>
            <TableColumn>
                <Label text="{i18n>tituloColunaTelefone}" />
            </TableColumn>
            <TableColumn>
                <Label text="{i18n>tituloColunaIdade}" />
            </TableColumn>
            <TableColumn>
                <Label text="{i18n>tituloColunaSexo}" />
            </TableColumn>
            <TableColumn>
                <Label text="{i18n>tituloColunaCheckIn}" />
            </TableColumn>
            <TableColumn>
                <Label text="{i18n>tituloColunaCheckOut}" />
            </TableColumn>
            <TableColumn>
                <Label text="{i18n>tituloColunaPrecoEstadia}" />
            </TableColumn>
            <TableColumn>
                <Label text="{i18n>tituloColunaPagamentoEfetuado}" />
            </TableColumn>
        </columns>
        <rows>
            <TableRow type="Active">
                <cells>
                    <TableCell>
                        <content>
                            <Label text="{id}" />
                        </content>
                    </TableCell>
                    <TableCell>
                        <content>
                            <Label text="{nome}" />
                        </content>
                    </TableCell>
                    <TableCell>
                        <content>
                            <Label text="{cpf}" />
                        </content>
                    </TableCell>
                    <TableCell>
                        <content>
                            <Label text="{telefone}" />
                        </content>
                    </TableCell>
                    <TableCell>
                        <content>
                            <Label text="{idade}" />
                        </content>
                    </TableCell>
                    <TableCell>
                        <content>
                            <Label text="{sexo}" />
                        </content>
                    </TableCell>
                    <TableCell>
                        <content>
                            <Label text="{checkIn}" />
                        </content>
                    </TableCell>
                    <TableCell>
                        <content>
                            <Label text="{checkOut}" />
                        </content>
                    </TableCell>
                    <TableCell>
                        <content>
                            <Label text="{precoEstadia}" />
                        </content>
                    </TableCell>
                    <TableCell>
                        <content>
                            <Label text="{pagamentoEfetuado}" />
                        </content>
                    </TableCell>
                </cells>
            </TableRow>
        </rows>
    </Table>
</mvc:View>