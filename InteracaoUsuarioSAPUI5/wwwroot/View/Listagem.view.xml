<mvc:View
    controllerName="reservas.hoteis.controller.Listagem"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel accessibleRole="Region">
        <Table
            id="TabelaReservas"
            class="sapUiResponsiveMargin"
            width="auto"
            items="{TabelaReservas>/}">
            <columns>
                <Column>
                    <Text text="{i18n>tituloColunaId}" />
                </Column>
                <Column>
                    <Text text="{i18n>tituloColunaNome}" />
                </Column>
                <Column>
                    <Text text="{i18n>tituloColunaCpf}" />
                </Column>
                <Column>
                    <Text text="{i18n>tituloColunaTelefone}" />
                </Column>
                <Column>
                    <Text text="{i18n>tituloColunaIdade}" />
                </Column>
                <Column>
                    <Text text="{i18n>tituloColunaSexo}" />
                </Column>
                <Column>
                    <Text text="{i18n>tituloColunaCheckIn}" />
                </Column>
                <Column>
                    <Text text="{i18n>tituloColunaCheckOut}" />
                </Column>
                <Column>
                    <Text text="{i18n>tituloColunaPrecoEstadia}" />
                </Column>
                <Column>
                    <Text text="{i18n>tituloColunaPagamentoEfetuado}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectNumber number="{TabelaReservas>id}" />
                        <ObjectIdentifier title="{TabelaReservas>nome}" />
                        <ObjectIdentifier title="{TabelaReservas>cpf}" />
                        <ObjectIdentifier title="{TabelaReservas>telefone}" />
                        <ObjectIdentifier title="{TabelaReservas>idade}" />
                        <ObjectIdentifier title="{TabelaReservas>sexo}" />
                        <ObjectIdentifier title="{TabelaReservas>checkIn}" />
                        <ObjectIdentifier title="{TabelaReservas>checkOut}" />
                        <ObjectNumber number="{TabelaReservas>precoEstadia}" />
                        <ObjectIdentifier title="{TabelaReservas>pagamentoEfetuado}" />

                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</mvc:View>