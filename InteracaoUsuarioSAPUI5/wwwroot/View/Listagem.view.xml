<mvc:View
    controllerName="reservas.hoteis.controller.Listagem"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel
        class="sapUiResponsiveMargin"
        width="auto"
        expandable="{device>/system/phone}"
        expanded="{= !${device>/system/phone} }"
        accessibleRole="Region">
        <headerToolbar>
            <Toolbar>
                <Button
                    icon="sap-icon://add"
                    text="{i18n>tituloBotaoAdicionar}"
                    press=".aoClicarAdicionarReserva" />
                <ToolbarSpacer />
                <SearchField
                    width="50%"
                    search=".aoPesquisarFiltrarReservas" />
            </Toolbar>
        </headerToolbar>
        <Table
            id="TabelaReservas"
            class="sapUiResponsiveMargin"
            width="auto"
            items="{TabelaReservas>/}">
            <columns>
                <Column
                    hAlign="Center"
                    width="3rem">
                    <ObjectIdentifier title="{i18n>tituloColunaId}" />
                </Column>
                <Column
                    hAlign="Center">
                    <ObjectIdentifier title="{i18n>tituloColunaNome}" />
                </Column>
                <Column
                    hAlign="Center">
                    <ObjectIdentifier title="{i18n>tituloColunaCpf}" />
                </Column>
                <Column
                    hAlign="Center">
                    <ObjectIdentifier title="{i18n>tituloColunaTelefone}" />
                </Column>
                <Column
                    hAlign="Center"
                    width="4rem">
                    <ObjectIdentifier title="{i18n>tituloColunaIdade}" />
                </Column>
                <Column
                    hAlign="Center"
                    width="5rem">
                    <ObjectIdentifier title="{i18n>tituloColunaSexo}" />
                </Column>
                <Column
                    hAlign="Center">
                    <ObjectIdentifier title="{i18n>tituloColunaCheckIn}" />
                </Column>
                <Column
                    hAlign="Center">
                    <ObjectIdentifier title="{i18n>tituloColunaCheckOut}" />
                </Column>
                <Column
                    hAlign="Center">
                    <ObjectIdentifier title="{i18n>tituloColunaPrecoEstadia}" />
                </Column>
                <Column
                    hAlign="Center">
                    <ObjectIdentifier title="{i18n>tituloColunaPagamentoEfetuado}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{TabelaReservas>id}" />
                        <ObjectIdentifier title="{TabelaReservas>nome}" />
                        <Text text="{TabelaReservas>cpf}" />
                        <Text text="{TabelaReservas>telefone}" />
                        <Text text="{TabelaReservas>idade}" />
                        <Text
                            text="{
                            path: 'TabelaReservas>sexo',
                            formatter: '.formatter.formataSexo'
                        }" />
                        <Text
                            text="{
                                path: 'TabelaReservas>checkIn',
                                type: 'sap.ui.model.type.Date',
                            formatOptions: {
                                style: 'short',
                            source: {
                                pattern: 'yyyy-MM-ddTHH:mm:ss'
                                }
                            }
                        }" />
                        <Text
                            text="{
                                path: 'TabelaReservas>checkOut',
                                type: 'sap.ui.model.type.Date',
                            formatOptions: {
                                style: 'short',
                            source: {
                                pattern: 'yyyy-MM-ddTHH:mm:ss'
                                }
                            }
                        }" />
                        <Text
                            text="{
                            parts: [
                                'TabelaReservas>precoEstadia',
                                'view>/currency'
                            ],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {
                                showMeasure: true,
                                currencyCode: false
                            }
                        }" />
                        <Text
                            text="{
                            path: 'TabelaReservas>pagamentoEfetuado',
                            formatter: '.formatter.formataPagamentoEfetuado'
                        }" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</mvc:View>