<mvc:View
    controllerName="reservas.hoteis.controller.Cadastro"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page>
        <customHeader>
            <Toolbar>
                <Button
                    icon="sap-icon://nav-back"
                    press=".navegarParaTelaListagem"
                    type="Transparent" />
                <ToolbarSpacer />
                <ObjectIdentifier title="{i18n>tituloCadastro}" />
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://save"
                    text="{i18n>tituloBotaoSalvar}"
                    class="sapUiTinyMargin"
                    type="Transparent"
                    press=".aoClicarSalvarReserva" />
                <Button
                    icon="sap-icon://decline"
                    press=".aoClicarCancelarCadastro"
                    text="{i18n>tituloBotaoCancelar}"
                    type="Transparent" />
            </Toolbar>
        </customHeader>
        <Panel
            backgroundDesign="Transparent">
            <FlexBox
                class="sapUiSmallMargin">
                <VBox
                    class="sapUiSmallMargin"
                    width="50%">
                    <Label
                        text="{i18n>labelNome}"
                        labelFor="inputNome" />
                    <Input
                        id="inputNome"
                        required="true"
                        placeholder="{i18n>placeholderNome}"
                        showClearIcon="true"
                        value="{/nome}" />
                    <Label
                        text="{i18n>labelCpf}"
                        labelFor="inputCpf" />
                    <MaskInput
                        id="inputCpf"
                        required="true"
                        width="100%"
                        mask="{i18n>mascaraCpf}"
                        placeholderSymbol="{i18n>simboloPlaceholder}"
                        placeholder="{i18n>placeholderCpf}"
                        showClearIcon="true"
                        value="{/cpf}" />
                    <Label
                        text="{i18n>labelTelefone}"
                        labelFor="inputTelefone" />
                    <MaskInput
                        id="inputTelefone"
                        required="true"
                        width="100%"
                        mask="{i18n>mascaraTelefone}"
                        placeholderSymbol="{i18n>simboloPlaceholder}"
                        placeholder="{i18n>placeholderTelefone}"
                        showClearIcon="true"
                        value="{/telefone}" />
                    <Label
                        text="{i18n>labelIdade}"
                        labelFor="inputIdade" />
                    <Input
                        id="inputIdade"
                        required="true"
                        type="Number"
                        placeholder="{i18n>placeholderIdade}"
                        showClearIcon="true"
                        value="{/idade}" />
                    <Label
                        text="{i18n>labelPagamentoEfetuado}"
                        required="true" />
                    <RadioButtonGroup
                        columns="2">
                        <RadioButton
                            id="radioButtonPagamentoEfetuado"
                            text="{i18n>radioButtonSim}"
                            selected="{/pagamentoEfetuado}" />
                        <RadioButton
                            id="radioButtonPagamentoNaoEfetuado"
                            text="{i18n>radioButtonNao}" />
                    </RadioButtonGroup>
                </VBox>
                <VBox
                    width="50%"
                    class="sapUiSmallMargin">
                    <Label
                        text="{i18n>labelSexo}"
                        labelFor="comboBoxSexo" />
                    <Select
                        id="comboBoxSexo"
                        required="true"
                        width="100%"
                        selectedKey="{/sexo}">
                        <core:ListItem key="0" text="{i18n>sexoMasculino}" />
                        <core:ListItem key="1" text="{i18n>sexoFeminino}" />
                    </Select>
                    <Label
                        text="{i18n>labelCheckIn}"
                        labelFor="inputCheckIn" />
                    <Input
                        id="inputCheckIn"
                        required="true"
                        type="Date"
                        value="{/checkIn}"
                    />
                    <Label
                        text="{i18n>labelCheckOut}"
                        labelFor="inputCheckOut" />
                    <Input
                        id="inputCheckOut"
                        required="true"
                        type="Date"
                        value="{/checkOut}"
                    />
                    <Label
                        text="{i18n>labelPrecoEstadia}"
                        labelFor="inputPrecoEstadia" />
                    <Input
                        id="inputPrecoEstadia"
                        placeholder="{i18n>placeholderPrecoEstadia}"
                        required="true"
                        type="Number"
                        value="{/precoEstadia}"
                    />
                </VBox>
            </FlexBox>
        </Panel>
    </Page>
</mvc:View>