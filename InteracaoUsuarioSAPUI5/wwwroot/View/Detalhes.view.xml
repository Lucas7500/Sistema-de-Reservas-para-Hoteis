<mvc:View
    controllerName="reservas.hoteis.controller.Detalhes"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page>
        <customHeader>
            <Toolbar>
                <Button
                    icon="sap-icon://nav-back"
                    press=".voltarPagina"
                    type="Transparent" />
                <ToolbarSpacer />
                <ObjectIdentifier title="{i18n>tituloDetalhes}" />
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://edit"
                    text="{i18n>tituloBotaoEditar}"
                    class="sapUiTinyMargin"
                    type="Transparent" />
                <Button
                    icon="sap-icon://delete"
                    text="{i18n>tituloBotaoRemover}"
                    type="Transparent" />
            </Toolbar>
        </customHeader>
        <Panel
            class="sapUiSmallMargin"
            backgroundDesign="Transparent">
            <VBox
                direction="Column">
                <HBox
                    class="sapUiTinyMargin">
                    <ObjectIdentifier title="{/nome}" />
                </HBox>
                <FlexBox
                    direction="Row">
                    <VBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <ObjectIdentifier title="{i18n>tituloColunaId}" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <ObjectIdentifier title="{i18n>tituloColunaCpf}" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <ObjectIdentifier title="{i18n>tituloColunaTelefone}" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <ObjectIdentifier title="{i18n>tituloColunaIdade}" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <ObjectIdentifier title="{i18n>tituloColunaSexo}" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <ObjectIdentifier title="{i18n>tituloColunaCheckIn}" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <ObjectIdentifier title="{i18n>tituloColunaCheckOut}" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <ObjectIdentifier title="{i18n>tituloColunaPrecoEstadia}" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <ObjectIdentifier title="{i18n>tituloColunaPagamentoEfetuado}" />
                        </HBox>
                    </VBox>
                    <VBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <Text text="{/id}" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <Text text="{/cpf}" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <Text text="{/telefone}" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <Text text="{/idade}" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <Text
                                text="{
                                path: '/sexo',
                                formatter: '.formatter.formataSexo'
                            }" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <Text
                                text="{
                                        path: '/checkIn',
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: {
                                            style: 'short',
                                            source: {
                                            pattern: 'yyyy-MM-ddTHH:mm:ss'
                                            }
                                        }
                                    }"
                            />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <Text
                                text="{
                                        path: '/checkOut',
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: {
                                            style: 'short',
                                            source: {
                                            pattern: 'yyyy-MM-ddTHH:mm:ss'
                                            }
                                        }
                                    }"
                            />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <Text
                                text="{
                                path: '/precoEstadia',
                                formatter: '.formatter.formataPrecoEstadia'
                            }" />
                        </HBox>
                        <HBox
                            class="sapUiTinyMargin">
                            <Text
                                text="{
                                path: '/pagamentoEfetuado',
                                formatter: '.formatter.formataPagamentoEfetuado'
                            }" />
                        </HBox>
                    </VBox>
                </FlexBox>
            </VBox>
        </Panel>
    </Page>
</mvc:View>