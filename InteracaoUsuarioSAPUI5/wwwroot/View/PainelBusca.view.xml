<mvc:View
    controllerName="reservas.hoteis.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel
        class="sapUiResponsiveMargin"
        width="auto"
        expandable="{device>/system/phone}"
        expanded="{= !${device>/system/phone} }"
        accessibleRole="Region">
        <headerToolbar>
            <Toolbar>
                <Button
                    icon="sap-icon://add"
                    text="{i18n>tituloBotaoAdicionar}" 
                    press=".aoClicarAdicionarReserva"/>
                <ToolbarSpacer />
                <SearchField
                    width="50%"
                    search="" />
            </Toolbar>
        </headerToolbar>
    </Panel>
</mvc:View>